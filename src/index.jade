html
	head
		title Indipixel
		link(rel="stylesheet", href="./main.css")
		link(href="https://fonts.googleapis.com/css?family=Montserrat", rel="stylesheet")
		link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css")
	body
		.head-line
		header
			.header-wraper
				.logo 
					span indipixel
				
				nav
					ul.nav-wraper
						li.nav-item
							a(href="#") Contact Us

		section.promo
			.promo-wraper
				.green-elements
					img.green-element(src="./img/green-element.png", alt="")
				.phone
					.phone_body
						img(src="./img/phone_body.png", alt="")
						.phone_screen
							img(src="./img/dyadya.png", alt="")
				.promo_right-side
					.content
						h1 We design and build <br/> beatiful web and mobile apps
						p You can design and create, and build the most wonderful place in the world. But it takes people to make the dream a reality. -Walt Disney
						.button-container
							button.green-button Know more

		section.form
			.container
				h3 Lets Talk
				form
					.two-column-block
						.input-container
							input(type="text" placeholder='First Name')
						.input-container
							input(type="text" placeholder='Last Name')
						.input-container
							input(type="email" placeholder='Email Address')
						.input-container.inputList
							input(type="text" placeholder='App Design')
							i.fa.fa-angle-down
					textarea(placeholder='Type your query here' rows=4)
					input.buttonInput.red-button(type="submit", value="send")

		footer
			.container
				.copyrighte 
					span Â© 2015 indipixel design
				.contact-mail-box
					.icon
						i.fa.fa-envelope-o
					.email
						span contact@yourmail.com


