@import 'kouto-swiss'

meyer-reset()

DESCTOP_SCREEN = only screen, min-device-width 980px, min-width 980px

LIGHT-GREEN = #04e4a2

.head-line
	position relative
	width 100%
	height 21px
	background-color #04e4a2
	
body
	font-family: 'Montserrat', sans-serif;

// Header style
header
	background-color #e94643
	height 80px
	width 100%
	clearfix()

	.header-wraper
		gs('fluid')
		max-width 1250px
		clearfix()
		

	.logo
		col(4)
		display inline-block
		line-height 80px
		color #FFFFFF
		font-weight bold
		font-size em(35)
		text-align center
		+media-query(DESCTOP_SCREEN)
			text-align left
			span
				padding-left 165px
			
	nav
		display inline-block
		text-align right
		line-height 80px
		col(8)

	.nav-wraper
		padding-right 20px
		text-align right
	.nav-item
		display inline-block
		font-size em(16)
		margin 0 10px
		font-weight 100
		a
			text-transform uppercase
			border-bottom 3px solid #fdd835
			text-decoration none
			color #FFFFFF
		
	
// Button style
button
	text-transform uppercase
	line-height 50px
	border none
	border-radius 5px
	color #FFFFFF
	font-size em(18)
	font-weight bold
	padding 0 24px
	outline none
	cursor pointer
.green-button
	background-color LIGHT-GREEN


// Promo style
.promo
	background-color #ef5350
	height 580px

.promo-wraper
	gs('fluid')
	max-width 1250px

.green-elements
	position absolute
	padding-top 75px
	left 0

.phone
	position absolute
	display inline-block
	left 14%
	margin-top 65px

.phone_screen
	position absolute
	margin-top -700px
	margin-left 30px
	
.promo_left-side
	col(5.4)
	offset(6)
	color #FFFFFF
	.content
		display inline-block
		padding-left 20px
		margin-top 180px
	h1
		text-transform: uppercase
		font-size em(30)
		line-height 38px
		margin-bottom 25px
	p
		font-size em(17)
		line-height 20px
	
.button-container
	margin-top 60px
	text-align right
	padding-right 30px

	